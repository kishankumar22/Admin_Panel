<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <!-- Allow all verbs including PUT and DELETE -->
      <add name="iisnode" path="index.js" verb="*" modules="iisnode" />
      
      <!-- Remove WebDAV handler that blocks PUT/DELETE -->
      <remove name="WebDAV" />
    </handlers>

    <!-- Remove WebDAV module to allow PUT/DELETE -->
    <modules>
      <remove name="WebDAVModule" />
    </modules>

    <rewrite>
      <rules>
        <rule name="DynamicContent">
          <match url="/*" />
          <action type="Rewrite" url="index.js" />
        </rule>
      </rules>
    </rewrite>

    <iisnode loggingEnabled="true" />
  </system.webServer>
</configuration>
